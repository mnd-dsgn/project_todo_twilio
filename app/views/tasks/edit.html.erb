<%= form_for @task do |t|  %>
  <%= t.label "Description." %>
  <%= t.text_field :description, :value => @task.description %>
  <%= t.label "Due date." %>
  <%= datetime_select("task", "due_date", ampm: true, :value => @task.due_date) %>
  <%= t.label "Category." %>
  <%= t.text_field :category, :value => @task.category %>
  <%= t.label "Priority." %>
  <%= t.text_field :priority,  :value => @task.priority %>
  <%= t.submit %>
<% end %>